<?xml version="1.0" encoding="UTF-8"?>
<placeable type="sellingStation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
<storeData>
<name>
        <en>Christmas Market Toys Selling Station</en>
        <de>Weihnachtsmarkt Spielsachen Verkaufsstation</de>
</name>

<functions>
<function>
        <en>Christmas Market for wooden toys as selling station.</en>
        <de>Weihnachtsmarkt Stand für Holz-Spielzeug als Verkaufsstation.</de>
</function>
</functions>

<image>store_marketToys.dds</image>
<lifetime>1000</lifetime>
<price>1000</price>
<rotation>0</rotation>
<brand>NONE</brand>
<species>placeable</species>
<category>sellingPoints</category>
<brush>
	<type>placeable</type>
    <category>production</category>
    <tab>sellingPoints</tab>
</brush>
        <vertexBufferMemoryUsage>725248</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>104448</indexBufferMemoryUsage>
        <textureMemoryUsage>4653056</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
</storeData>

<base>
	<filename>marketToys.i3d</filename>
    <canBeRenamed>true</canBeRenamed>
</base>

    <placement useRandomYRotation="false" useManualYRotation="true" >
        <testAreas>
            <testArea startNode="0>3|1" endNode="0>3|1|0" />
        </testAreas>
        <sounds>
            <place template="medImp" />
        </sounds>
    </placement>


<clearAreas> 
        <clearArea startNode="0>3|0" widthNode="0>3|0|0" heightNode="0>3|0|1"/>
</clearAreas>

<leveling maxEdgeAngle="30" maxSlope="30" maxSmoothDistance="8" requireLeveling="true">
<levelAreas> 
    <levelArea startNode="0>3|0" widthNode="0>3|0|0" heightNode="0>3|0|1"/>
</levelAreas>
</leveling>

    <indoorAreas>
        <indoorArea startNode="0>3|2" widthNode="0>3|2|0" heightNode="0>3|2|1" />
    </indoorAreas>

    <ai>
        <splines>
            <spline node="0>5|0|3" />
        </splines>
        <updateAreas>
            <updateArea startNode="0>3|3" endNode="0>3|3|0" />
        </updateAreas>
    </ai>

    <hotspots>
        <hotspot type="UNLOADING" linkNode="0>5|0|2" teleportNode="0>5|0|2" />
    </hotspots>

    <sellingStation appearsOnStats="true" node="0>5|1" supportsExtension="false">

        <unloadTrigger fillTypes="WOOD" aiNode="0>5|0|1">
            <woodTrigger triggerNode="0>5|1|0" activationTriggerNode="0>5|1|1"/>
        </unloadTrigger>

    </sellingStation>



    <triggerMarkers>
        <triggerMarker node="0>5|0|2" filename="$data/shared/assets/marker/markerIcons.xml" id="UNLOAD" adjustToGround="true" />
        <triggerMarker node="0>5|1|1|0" filename="$data/shared/assets/marker/markerIcons.xml" id="EXCLAMATION_MARK" adjustToGround="true" />
    </triggerMarkers>

    <animatedObjects>
        <animatedObject saveId="door" >
            <animation duration="1.5">
                <part node="0>1|0">
                    <keyFrame time="0.0" rotation="0 0 0"/>
                    <keyFrame time="1.0" rotation="0 175 0"/>
                </part>
            </animation>
            <controls triggerNode="0>1|1" posAction="ACTIVATE_HANDTOOL" posText="action_openGate" negText="action_closeGate" />
            <sounds>
                <moving file="$data/sounds/prefab/gate/backDoorLoop.wav" loops="0" linkNode="0>1|0" volume="0.8" radius="25" innerRadius="3" fadeOut="0.25"/>
                <posEnd file="$data/sounds/prefab/gate/gateOpened.wav" linkNode="0>1|0" volume="0.8" radius="25" innerRadius="3" />
                <negEnd file="$data/sounds/prefab/gate/gateClosed.wav" linkNode="0>1|0" volume="0.8" radius="25" innerRadius="3" />
            </sounds>
        </animatedObject>

  <animatedObject saveId="speaker" >
   <controls triggerNode="1|3" posAction="ACTIVATE_HANDTOOL" posText="l10nXmasMusicPlay" negText="l10nXmasMusicPlayAgain" />
   <sounds>
    <moving file="xmasSong02.ogg" loops="0" linkNode="1|5|0" volume="0.8" radius="5" innerRadius="1" fadeOut="0.25"/>
   </sounds>
   <animation duration="22">
    <part node="1|5|0">
     <keyFrame time="0.0" rotation="0 0 0" translation="0 0 0"/>
     <keyFrame time="0.1" rotation="45 0 -90" translation="0 0.5 0"/>
     <keyFrame time="0.2" rotation="45 -20 -110" translation="0 0.5 0"/>
     <keyFrame time="0.3" rotation="45 -20 -70" translation="0 0.6 0"/>
     <keyFrame time="0.4" rotation="45 -20 -100" translation="0 0.7 0"/>
     <keyFrame time="0.5" rotation="45 -20 -60" translation="0 0.5 0"/>
     <keyFrame time="0.6" rotation="45 -20 -90" translation="0 0.4 0"/>
     <keyFrame time="0.7" rotation="45 -20 -110" translation="0 0.5 0"/>
     <keyFrame time="0.8" rotation="45 -20 -50" translation="0 0.6 0"/>
     <keyFrame time="0.9" rotation="45 -20 -90" translation="0 0.5 0"/>
     <keyFrame time="1" rotation="0 0 0"  translation="0 0 0"/>
    </part>

   </animation>
  </animatedObject>

  </animatedObjects>




</placeable>

